        android:supportsRtl="true"
        android:theme="@style/Theme.Frontendrestauranttransactionsvisualizer"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.single_buyer_details.SingleBuyerDetails" />
        <activity android:name=".ui.buyer_main_page.MainActivity">

        </activity>
    </application>

</manifest>